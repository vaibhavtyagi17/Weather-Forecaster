<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Gradient -->
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#329E91"
                android:endColor="#6FCFC7"
                android:type="linear" />
        </shape>
    </item>

    <!-- Subtle Cloud Layer (Optional, for design) -->
    <item>
        <bitmap
            android:src="@drawable/cloud"
            android:tileMode="repeat" />
    </item>
</layer-list>
